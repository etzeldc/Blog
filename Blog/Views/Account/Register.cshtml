@model Blog.Models.RegisterViewModel

<!-- Page Header -->
<header class="masthead" style="background-image: url('/img/HeilRanch.JPG')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="site-heading">
                    <h1>Dave's<br />Of The Week</h1>
                    <span class="subheading">A Blog Of My Boot Camp Adventures</span>
                </div>
            </div>
        </div>
    </div>
</header>

<article>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="row">
                    <div class="col-md-8">
                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <h4>Create a new account.</h4>
                                <hr />
                                @Html.ValidationSummary("", new { @class = "text-danger" })
                                <div class="form-group floating-label-form-group controls">
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "First Name", type = "text", maxlength = 40 })
                                        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })

                                    </div>
                                </div>
                                <div class="form-group floating-label-form-group controls">
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Last Name", type = "text", maxlength = 40 })
                                        @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group floating-label-form-group controls">
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control", placeholder = "Display Name", type = "text", maxlength = 40 })
                                        @Html.ValidationMessageFor(m => m.DisplayName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group floating-label-form-group controls">
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email", type = "text", maxlength = 100 })
                                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group floating-label-form-group controls">
                                    <div class="col-md-10">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password", type = "password", maxlength = 40 })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group floating-label-form-group controls">
                                    <div class="col-md-10">
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password", })
                                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })

                                    </div>
                                </div>
                                <br />
                                <div class="form-group">
                                        <input type="submit" class="btn btn-default" value="Register" />
                                </div>
                            }
                    </div>
                </div>
            </div>
        </div>
    </div>
</article>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
